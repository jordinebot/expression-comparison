{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "none",
  "useTabs": true,
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "useTabs": false,
        "tabWidth": 2,
        "printWidth": 80
      }
    }
  ]
}
